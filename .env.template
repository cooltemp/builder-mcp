# Builder.io API Configuration
BUILDER_PUBLIC_API_KEY=your_builder_public_api_key_here
BUILDER_PRIVATE_API_KEY=your_builder_private_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Frontend Codebase Path (for Augment context)
FRONTEND_PATH=../your-frontend-project

# Optional: Database (for future features)
# DATABASE_URL=postgresql://username:password@localhost:5432/builder_mcp

# Optional: Redis (for caching)
# REDIS_URL=redis://localhost:6379

# Optional: Scraper Configuration
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; BuilderMCP/1.0)
SCRAPER_DELAY_MS=1000
SCRAPER_TIMEOUT_MS=30000
